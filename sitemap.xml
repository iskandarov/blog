<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://sitemaps.org/schemap/sitemap/0.9">

	{% for post in site.posts %}
			{% if page.layout %}
		{% include sitemap-entry.xml entry=post %}
			{% endif %}	
	{% endfor %}

	{% for page in site.pages entry=page %}
		{% if page.layout %}
			{% include sitemap-entry.xml %}
		{% endif %}
	{% endfor %}
</urlset>
